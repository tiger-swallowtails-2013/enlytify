<div id="prev-day"><a href="/dashboard/<%=@date - 1%>" class="btn btn-primary">Previous Day</a></div>
  <div class="container">
    <h1 id="date">Lightning Talks - <%=@date%></h1> 
    <table id="topics-date">
      <th>Topic</th>
      <th>Author</th>
      <% @days_talks.each do |talk| %>
         <tr>
          <td class='talk'><a href="/talk/<%=talk.id%>"><%= talk.topic %></a></td>
          <td class='author'><%= talk.speaker %></td>
        </tr>
      <% end %>
    </table>

    <form id="add_talk" action="/dashboard/<%=@date%>/add_talk" method="post">
    <input class="new_talk" type="text" name="new_talk">
    <select class="new_talk" name="author">
     <% current_user.list_cohort_names(@cohort_id).each do |student| %>
        <option><%= student %></option>
     <%end%>
    </select>
    <input type="submit" class="btn btn-primary" value="add talk"></input>
  </form>



  </div>
<div id="next-day"><a href="/dashboard/<%=@date + 1%>" class="btn btn-primary">Next Day</a></div>







